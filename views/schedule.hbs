<h1 class = "guide">Select Courses</h1>

<button id = "change" style = "display:none">Τροποποίηση Δήλωσης</button>
<button id = "declare">Δήλωση Μαθημάτων</button>
<div class = "selectedCourses" style = "display:none">
    <h3>Επιλεγμένα Μαθήματα</h3>
    <ul id = "courseList">
        {{#each selectedCourses}}
        
            <li>{{selectedCourses}}</li>
        {{/each}}    
    </ul>    

</div>

<div class = "schedule">
    
    <form action = "/schedule"  class = "selection"  style = "display: none" method = "post">
        {{#each courses}}
            <input type="checkbox" name = "checkId" value = "{{_id}}"> {{title}}<br>
        {{/each}}
        <input type = "submit" id = "save" value = "Save">
    </form>


</div>

<script defer src = "/scripts/schedule.js"></script>








